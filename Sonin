import tkinter as tk

def exibir_mensagem():
    label["text"] = "Boa noite, fui de sonin"

# Criar janela
janela = tk.Tk()
janela.title("Exemplo de Botão")

# Criar botão
botao = tk.Button(janela, text="Clique aqui", command=exibir_mensagem)
botao.pack(pady=20)

# Criar rótulo para exibir mensagem
label = tk.Label(janela, text="")
label.pack()

# Rodar o loop principal da janela
janela.mainloop()
